DROP TABLE IF EXISTS {SQL_TABLE_PREFIX}ses;

CREATE TABLE {SQL_TABLE_PREFIX}ses
(
	id		INT UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY,
	ses_id		CHAR(32) NOT NULL DEFAULT 0,
	sys_id		CHAR(32) NOT NULL DEFAULT 0,
	user_id		INT UNSIGNED NOT NULL DEFAULT 0,
	action		CHAR(255),
	forum_id        INT NOT NULL DEFAULT 0,
	
	time_sec	INT UNSIGNED NOT NULL DEFAULT 0,
	
	data		TEXT,
	
	UNIQUE(ses_id),
	UNIQUE(user_id),
	INDEX(time_sec,user_id)
)