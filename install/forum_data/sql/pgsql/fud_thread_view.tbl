DROP TABLE {SQL_TABLE_PREFIX}thread_view;

CREATE TABLE {SQL_TABLE_PREFIX}thread_view
(
	forum_id	INT NOT NULL,
	page		INT NOT NULL,
	thread_id	INT NOT NULL,
	pos		INT NOT NULL
);

CREATE UNIQUE INDEX {SQL_TABLE_PREFIX}thread_view_index_fid_page_pos ON {SQL_TABLE_PREFIX}thread_view (forum_id, page, pos);
CREATE INDEX {SQL_TABLE_PREFIX}thread_view_index_fid_thread_id ON {SQL_TABLE_PREFIX}thread_view (forum_id, thread_id);
