DROP TABLE IF EXISTS {SQL_TABLE_PREFIX}ann_forums;

CREATE TABLE {SQL_TABLE_PREFIX}ann_forums
(
	ann_id		INT NOT NULL DEFAULT 0,
	forum_id	INT NOT NULL DEFAULT 0
);

