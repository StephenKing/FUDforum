{SECTION: iemail_body}
{TEMPLATE: header_plain}
<table border="0" cellspacing="1" cellpadding="2" class="ContentTable">
<tr class="RowStyleB">
	<td width="33%">{MSG: iemail_msg_subject}</td>
	<td width="33%">{MSG: iemail_msg_author}</td>
	<td width="33%">{MSG: iemail_msg_date}</td>
</tr>
<tr class="RowStyleA">
	<td colspan="3">
	{TEMPLATE-DATA: iemail_poll}
	{TEMPLATE-DATA: body}
	{TEMPLATE-DATA: iemail_attach}
	</td>
</tr>
<tr class="RowStyleB">
	<td colspan="3">
	[ <a href="{ROOT}/r/reply_to/{VAR: obj->id}/{VAR: pfx}">{MSG: iemail_msg_reply}</a> ][ <a href="{ROOT}/r/quote/true/{VAR: obj->id}/{VAR: pfx}">{MSG: iemail_msg_quote}</a> ][ <a href="{ROOT}/m/{VAR: obj->id}/{VAR: pfx}">{MSG: iemail_msg_view}</a> ]{TEMPLATE-DATA: iemail_unsub}
	</td>
</tr>
</table>
{TEMPLATE: footer_plain}
{SECTION: END}

{SECTION: iemail_attach_entry file attachment entry row}
<tr>
<td valign="middle"><a class="GenLink" href="{ROOT}/fa/{VAR: v[0]}/{VAR: pfx}"><img alt="" src="{GVAR: WWW_ROOT}images/mime/{VAR: v[4]}" /></a></td>
<td><font class="GenText"><b>{MSG: attachment}</b></font> <a class="GenLink" href="{ROOT}/fa/{VAR: v[0]}/{VAR: pfx}">{VAR: v[1]}</a><br />
<font class="SmallText">({MSG: size} {VAR: sz}, {MSG: download_counter})</font></td></tr>
{SECTION: END}

