	<td class="RowStyleB" align="center">{VAR: r[16]}</td>
	<td class="RowStyleA" nowrap align="center">{VAR: last_post}</td>
	<td class="RowStyleB" align="center"><font class="SmallText">{VAR: moderators}</font></td>
</tr>
{SECTION: END}

{SECTION: forum_with_no_view_perms}
<tr>
	<td class="RowStyleA" width=1>&nbsp;</td>
	<td class="RowStyleB" width=1>&nbsp;</td>
	<td class="RowStyleA" colspan=5>{VAR-HTML: r[13]}<br />{VAR: r[14]}</td>
</tr>
{SECTION: END}

{SECTION: forum_read}
<img title="{MSG: forum_old_messages}" src="{THEME_IMAGE_ROOT}/existing_content.gif" alt="{MSG: forum_old_messages}" border=0 />
