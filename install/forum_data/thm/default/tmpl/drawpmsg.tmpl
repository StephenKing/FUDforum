{SECTION: END}

{SECTION: dpmsg_offline_indicator}
<img src="{THEME_IMAGE_ROOT}/offline.gif" border=0 alt="{MSG: user_offline}" title="{MSG: user_offline}" />
{SECTION: END}

{SECTION: dpmsg_avatar}
<img src="{VAR: avatar_img}" border=0 />
{SECTION: END}

{SECTION: dpmsg_no_avatar}
{SECTION: END}

{SECTION: dpmsg_host_name}
{MSG: from}<br /><font class="SmallText">{VAR: host_name}</font><br />
{SECTION: END}

{SECTION: dpmsg_location}
{MSG: location} {VAR: location}<br />
{SECTION: END}

{SECTION: dpmsg_no_location}
{SECTION: END}

{SECTION: dpmsg_custom_tags}
{VAR: obj->custom_status}<br />
{SECTION: END}

{SECTION: dpmsg_no_custom_tags}
{SECTION: END}

{SECTION: dpmsg_msg_icon}
<img src="images/message_icons/{VAR: obj->icon}" alt="" border=0 />&nbsp;&nbsp;
{SECTION: END}

{SECTION: dpmsg_no_msg_icon}
{SECTION: END}

{SECTION: dpmsg_buddy_link}
<br />[<a href="{ROOT}?t=buddy_list&amp;{DEF: _rsid}&amp;add={VAR: obj->user_id}" class="GenLink">{MSG: add_to_buddy_list}</a>]
{SECTION: END}

{SECTION: dpmsg_add_user_ignore_list}
<br />[<a href="{ROOT}?t=ignore_list&amp;{DEF: _rsid}&amp;add={VAR: obj->user_id}" class="GenLink">{MSG: ignore_user}</a>]
{SECTION: END}

{SECTION: dpmsg_level_name}
<font class="LevelText">{VAR: obj->level_name}</font><br />
{SECTION: END}

{SECTION: dpmsg_level_image}
<img src="images/{VAR: obj->level_img}" border=0 alt="" /><br />
{SECTION: END}

{SECTION: dpmsg_im_icq}
<a href="{ROOT}?t=usrinfo&amp;id={VAR: obj->user_id}&amp;{DEF: _rsid}#icq_msg"><img src="http://web.icq.com/whitepages/online?icq={VAR: obj->icq}&amp;img=5" border=0 alt="" alt="" /></a>&nbsp;
{SECTION: END}

{SECTION: dpmsg_im_aim}
<a href="aim:goim?screenname={VAR: im_aim}&amp;message=Hi.+Are+you+there?"><img src="{THEME_IMAGE_ROOT}/aim.gif" border=0 alt="" /></a>&nbsp;
{SECTION: END}

{SECTION: dpmsg_im_yahoo}
<a target="_blank" href="http://edit.yahoo.com/config/send_webmesg?.target={VAR: im_yahoo}&amp;.src=pg"><img src="{THEME_IMAGE_ROOT}/yahoo.gif" border=0 alt="" /></a>&nbsp;
{SECTION: END}

{SECTION: dpmsg_im_msnm}
<a href="mailto:{VAR: obj->msnm}"><img src="{THEME_IMAGE_ROOT}/msnm.gif" border=0 alt="" /></a>
{SECTION: END}

{SECTION: dpmsg_im_jabber}
<img src="{THEME_IMAGE_ROOT}/jabber.gif" title="{VAR: obj->jabber}" alt="{VAR: obj->jabber}" border=0 />
{SECTION: END}

{SECTION: dpmsg_file_attachments the file attachments list}
<p>
<table border=0 cellspacing=0 cellpadding=2>
{TEMPLATE-DATA: file_attachments}
</table>
{SECTION: END}

{SECTION: dpmsg_file_attachment file attachment entry row}
<tr>
<td valign=middle><a class="GenLink" href="{ROOT}?t=getfile&amp;id={VAR: a_obj->id}&amp;{DEF: _rsid}&amp;private=1"><img src="images/mime/{VAR: a_obj->icon}" border=0 alt="" /></a></td>
<td><font class="GenText"><b>{MSG: attachment}</b></font> <a class="GenLink" href="{ROOT}?t=getfile&amp;id={VAR: a_obj->id}&amp;{DEF: _rsid}&amp;private=1">{VAR: a_obj->original_name}</a><br />
<font class="SmallText">({MSG: size} {VAR: sz}, {MSG: download_counter})</font></td></tr>
{SECTION: END}

{SECTION: dpmsg_signature}
<p><u>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</u><br />{VAR: obj->sig}
{SECTION: END}

{SECTION: dpmsg_user_profile}
<a class="GenLink" href="{ROOT}?t=usrinfo&amp;id={VAR: obj->user_id}&amp;{DEF: _rsid}"><img src="{THEME_IMAGE_ROOT}/msg_about.gif" border=0 alt="" /></a>
{SECTION: END}

{SECTION: dpmsg_email_link}
<a class="GenLink" href="{ROOT}?t=email&amp;tx_name={VAR: encoded_login}&amp;{VAR: ret_n_sid}"><img src="{THEME_IMAGE_ROOT}/msg_email.gif" border=0 alt="" /></a>
{SECTION: END}

{SECTION: dpmsg_private_msg_link}
<a class="GenLink" href="{ROOT}?t=ppost&amp;msg_to_list={VAR: encoded_login}&amp;{VAR: ret_n_sid}"><img title="{MSG: send_pm_desc}" src="{THEME_IMAGE_ROOT}/msg_pm.gif" border=0 alt="" /></a>
{SECTION: END}

{SECTION: dpmsg_edit_link}
<a class="GenLink" href="{ROOT}?t=ppost&amp;msg_id={VAR: obj->id}&amp;{DEF: _rsid}"><img src="{THEME_IMAGE_ROOT}/msg_edit.gif" border=0 alt="" /></a>&nbsp;&nbsp;&nbsp;&nbsp;
{SECTION: END}

{SECTION: dpmsg_reply_link}
<a class="GenLink" href="{ROOT}?t=ppost&amp;reply={VAR: obj->id}&amp;{DEF: _rsid}"><img src="{THEME_IMAGE_ROOT}/msg_reply.gif" border=0 alt="" /></a>&nbsp;
{SECTION: END}

{SECTION: dpmsg_quote_link}
<a class="GenLink" href="{ROOT}?t=ppost&amp;quote={VAR: obj->id}&amp;{DEF: _rsid}"><img src="{THEME_IMAGE_ROOT}/msg_quote.gif" border=0 alt="" /></a>
{SECTION: END}

{MAIN_SECTION: private_message_entry   draws a single private message}<tr>
<td class="RowStyleA" valign=top nowrap>

<table cellspacing=0 cellpadding=0 border=0>
<tr>
	<td valign="middle">{TEMPLATE-DATA: online_indicator}</td>
	<td valign="middle" class="GenText">{TEMPLATE-DATA: profile_link}</td>
</tr>
</table>

<font class="GenText">{TEMPLATE-DATA: avatar}<br /><br />
{TEMPLATE-DATA: custom_tag}
{MSG: posts_c} {VAR: obj->posted_msg_count}<br />
{TEMPLATE-DATA: host_name}
{TEMPLATE-DATA: location}
{MSG: registered}<br /><font class="DateText">{DATE: obj->join_date %B %Y}</font>
{TEMPLATE-DATA: buddy_link}
{TEMPLATE-DATA: ignore_link}
</font><div align=center>
{TEMPLATE-DATA: im_icq}
{TEMPLATE-DATA: im_aim}
{TEMPLATE-DATA: im_yahoo}
{TEMPLATE-DATA: im_msnm}
{TEMPLATE-DATA: im_jabber}
{TEMPLATE-DATA: im_affero}
</div></td>
<td class="RowStyleA" valign="top" width="100%">
<table border=0 cellspacing=0 cellpadding=0 width="100%">
<tr>
	<td valign="top" align="left" class="MsgSubText">{TEMPLATE-DATA: msg_icon}{VAR: obj->subject}</td>
	<td valign="top" align=right><img src="{THEME_IMAGE_ROOT}/posticon.gif" border=0 alt="" /><font class="DateText">{DATE: obj->post_stamp %a, %d %B %Y %H:%M}</font></td>
</tr>
<tr><td colspan=2 class="ContentTable"><img src="blank.gif" alt="" border=0 /></td></tr>
<tr class="RowStyleA" valign="top">
	<td colspan=2 valign="top" height="100%"><font class="MsgBodyText">{VAR: msg_body}{TEMPLATE-DATA: file_attachments}{TEMPLATE-DATA: signature}</font></td></tr></table></td>
</tr>
{TEMPLATE-DATA: msg_toolbar}
<tr><td colspan=2 align="right" bgcolor="#FFFFFF">{GVAR: dpmsg_prev_message} {GVAR: dpmsg_next_message}</td></tr>
{MAIN_SECTION: END}

{SECTION: dpmsg_no_msg_body}
{MSG: no_msg_body}
{SECTION: END}

{SECTION: dpmsg_msg_toolbar buttons for replying,editing,deliting and forwarding the message}
<tr class="MsgToolBar"><td colspan=2><table border=0 cellspacing=0 cellpadding=0 width="100%"><tr>
<td align="left" nowrap width="1%">
{TEMPLATE-DATA: user_profile}&nbsp;{TEMPLATE-DATA: email_link}&nbsp;{TEMPLATE-DATA: private_msg_link}
</td>
<td align="right" nowrap width="1%">
<a class="GenLink" href="{ROOT}?t=pmsg&amp;{DEF: _rsid}&amp;btn_delete=1&amp;sel={VAR: obj->id}"><img src="{THEME_IMAGE_ROOT}/msg_delete.gif" border=0 alt="" /></a>&nbsp;{TEMPLATE-DATA: edit_link}{TEMPLATE-DATA: reply_link}{TEMPLATE-DATA: quote_link}
<a class="GenLink" href="{ROOT}?t=ppost&amp;forward={VAR: obj->id}&amp;{DEF: _rsid}"><img src="{THEME_IMAGE_ROOT}/msg_forward.gif" border=0 alt="" /></a>
</td></tr></table></td></tr>
{SECTION: END}

{SECTION: dpmsg_profile_link}
<a class="GenLink" href="{ROOT}?t=usrinfo&amp;id={VAR: obj->user_id}&amp;{DEF: _rsid}">{VAR: obj->login}</a><br />{TEMPLATE-DATA: level_name}{TEMPLATE-DATA: level_image}
{SECTION: END}

{SECTION: dpmsg_profile_no_link user's name without the link to the profile}
{VAR: obj->login}
{SECTION: END}

{SECTION: dpmsg_prev_message link to the previous message}
<a href="{ROOT}?t=pmsg_view&amp;{DEF: _rsid}&amp;id={VAR: pid}" class="GenLink"><img src="{THEME_IMAGE_ROOT}/goback.gif" border=0 alt="" /> {MSG: pmsg_prev_msg}</a>
{SECTION: END}

{SECTION: dpmsg_next_message link to the next message}
<a href="{ROOT}?t=pmsg_view&amp;{DEF: _rsid}&amp;id={VAR: nid}" class="GenLink">{MSG: pmsg_next_msg} <img src="{THEME_IMAGE_ROOT}/goto.gif" border=0 alt="" /></a>
{SECTION: END}

