{REF: security.tmpl}
{REF: header.tmpl}
{REF: usercp.tmpl}
{REF: curtime.tmpl}
{REF: stats.tmpl}
{REF: footer.tmpl}

{PAGE: PAGE_PAGE // Display a static forum page.}
{TEMPLATE: header}
{TEMPLATE: usercp}
<div class="breadcrumbs">
	<a href="{TEMPLATE: dfp_home_lnk}">{MSG: home}</a> &nbsp;&raquo; {MSG: page_list_heading}
<div>
<table cellspacing="1" cellpadding="2" class="ContentTable"><tr><td>
{IF: !empty($page->title)}
	<h2>{VAR: page->title}</h2>
	<div class="page-content">
		{VAR: page->body}
	</div>
{ELSE}
	<h2>{MSG: page_list_heading}</h2>
	<ul>
		{TEMPLATE-DATA: page_list}
	</ul>
	<i>{MSG: page_list_total}</i>
{END}
</td></tr></table>
{TEMPLATE: curtime}
{TEMPLATE-DATA: page_stats}
{TEMPLATE: footer}
{PAGE: END}

{SECTION: page_list_entry}
<li><a href="{TEMPLATE: page_list_entry_lnk}">{VAR: r->title}</a>
{SECTION: END}

{SECTION: page_list_entry_lnk}
{ROOT}?t=page&id={VAR: r->slug}&amp;{DEF: _rsid}
{SECTION: END}

{SECTION: page_update}
{MSG: page_update}
{SECTION: END}
