<script type="text/javascript">
/* <![CDATA[ */
$(document).ready(function() {
  var toggleMinus = '{THEME_IMAGE_ROOT}/min{DEF: img_ext}';
  var togglePlus  = '{THEME_IMAGE_ROOT}/max{DEF: img_ext}';

  $(".collapsed").prepend('<img src="' + togglePlus + '" alt="+" title="{MSG: maximize_category}" /> ')
                 .addClass("collapsable");
  $(".expanded").prepend('<img src="' + toggleMinus + '" alt="-" title="{MSG: minimize_category}" /> ')
	        .addClass("collapsable");

  $("img", $(".collapsable")).addClass('clickable')
  .css("cursor", "pointer")
  .click(function() {
    var toggleSrc = $(this).attr('src');
    var cat = $(this).parents("tr").attr('id');
    var on;

    if ( toggleSrc.indexOf(toggleMinus) >= 0 ) {	// Hide cat
      $(this).attr('src', togglePlus)
             .attr("title", "{MSG: maximize_category}")
             .attr("alt", "+")
             .parents('tr').siblings(".child-"+cat).fadeOut('fast');
      on = 1;
    } else{				// Show cat
      $(this).attr('src', toggleMinus)
             .attr("title", "{MSG: minimize_category}")
             .attr("alt", "-")
             .parents('tr').siblings(".child-"+cat).fadeIn('fast');
      on = 0;
    };

{IF: _uid}
    $.ajax({
       type: "POST",
       url: "index.php?t=cat_focus",
       data: "SQ={VAR: usr->sq}&S={DEF: s}&c="+cat.substr(1)+"&on="+on
     });
{ENDIFI}

  });
})
/* ]]> */
</script>

