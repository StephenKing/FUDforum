{PAGE: FORUM_CSS forum's css styles}
body { 
	background: #E5E5E5;
	margin: 2px;
	font-family: Tahoma, Verdana, "Myriad Web", Syntax, sans-serif;
	font-size: 11px;
}

text,	.ForumBackground, a:link, a:visited, a:active, a.CatLink, .CatDesc, a.UserControlPanel, .CatLockedName, .GenText, .GenLink, 
	.GenTextRed, .ErrorText, .ErrorText, .SmallText, .DateText, .TopBy, th, a.thLnk:link, a.thLnk:active, a.thLnk:visited, 
	a.thLnk:active, a.thLnk:visited, .RowStyleA, .RowStyleB, .RowStyleC, .MsgToolBar, .PollTable, 
	.ContentTable, .MsgTable, .DialogTable, .PreviewTable, .AnnonTable, .ContentTable, .AnnonTable, .AnnText, 
	.AnnSubjText, .PagerLink, .LevelText, .MsgSubText, .MsgBodyText, 
	.FormattingToolsBG, .FormattingToolsCLR, .MiniTable, .quote, .dashed, .adminColor, .modsColor, 
	.brdrNormal, .brdrSelected, input.button, form, img, .StClr, .AnClr, 
	.ModOpt, .MsgR1, .MsgR2, .MsgR3, .mnavMsg, .mnavWarnTbl, .manvNoRes, font.lg, td.tt, table.tt,
	a.big:link, a.big:active, a.big:visited
{
	font-family: Tahoma, Verdana, "Myriad Web", Syntax, sans-serif;
	font-size: 11px;
}

.ForumBackground {
	background: #FFFFFF;
	border: 1px solid #AEBDC4;
}

a:link, a:visited {
	color: #006699;
	text-decoration: underline;
}

a:active {
	color: #C23030; 
	text-decoration: underline;
}

a.CatLink {
	font-size: 12px;
	text-decoration: none;
}

.CatDesc {
	color: #000000;
	background: url("{THEME_IMAGE_ROOT}/tableHeaderbg3.gif");
}

a.UserControlPanel {
	color: #006699;
	text-decoration: none;
}

.CatLockedName {
	font-size: 12px;
	font-weight: bold;
}

.GenText, .GenLink {
	color: #000000;
}

.GenTextRed, .ErrorText {
	color: red;
}

.ErrorText {
	font-weight: bold;
}

.SmallText, .DateText, .TopBy {
	color: #000000;
	font-size: 10px;
}

th {
	font-size: 12px;
	text-align: left;
	color: #FFFFFF;
	font-weight: bold;
	background: url("{THEME_IMAGE_ROOT}/tableHeaderbg.gif");
}

a.thLnk:link, a.thLnk:active, a.thLnk:visited { 
	font-size: 11px;
	text-decoration: underline; 
	color: #EEEEEE;
}

a.thLnk:active { 
	color: #DEE2E6; 
}

a.thLnk:visited { 
	color: #C2CDD6;
}

.RowStyleA, td.tt {
	background: #eeeeee;
}

.RowStyleB {
	background: #dee2e6;
}

.RowStyleC {
	background: #c2cdd6;
}

.MsgToolBar {
	background: url("{THEME_IMAGE_ROOT}/tableHeaderbg2.gif");
}

.PollTable, .ContentTable, .MsgTable, .DialogTable, .PreviewTable, .AnnonTable { 
	background : #FFFFFF;
	border : 0px;
	padding : 0px;
	margin : 0px;
}

.ContentTable, .AnnonTable, .MsgTable {
	width : 100%;
}

.MsgTable {
	border: 1px solid black;
	margin-top: 3px;
	margin-bottom: 3px;
}

.DialogTable { 
	width : 50%;
}

.PreviewTable {
	width: 75%;
}

.AnnText {
	color: #000000;
	background: #f5d300;
}

.AnnSubjText {
	font-weight: bold;
}

.PagerLink {
	color: #000000;
	text-decoration: none;
}

.LevelText {
	color: #000000;
	text-decoration: none;
}

.MsgSubText {
	font-weight: bold;
}

.MsgBodyText {
	font-size: 12px;
}

.FormattingToolsBG {
	background: #000000;
}

.FormattingToolsCLR {
	background: #FFFFFF;
}

.MiniTable {
	background: #FFFFFF;
	border : 0px;
	padding : 0px;
	margin : 0px;
}

.quote {
	color: #444444;
	background: #FAFAFA;
	border: 1px solid #c2cdd6;
}

.dashed {
	border: 1px dashed #1B7CAD;
}

.adminColor {
	font-weight: bold;
	color: #FF0000;
}

.modsColor {
	color: #00BB00;
	font-weight: bold;
}

.brdrNormal {
	border: #000000;
	border-style: solid;
	border-left-width: 0px;
	border-top-width: 0px;
	border-right-width: 0px;
	border-bottom-width: 1px;
	background-repeat: repeat;
	background-position: top;
}

.brdrSelected {
	border: #000000;
	border-style: solid;
	border-left-width: 0px;
	border-top-width: 0px;
	border-right-width: 0px;
	border-bottom-width: 0px;
	background-repeat: repeat;
	background-position: top;
}

input.button {
        background: #EEEEEE;
	color: #000000;
	font-weight: normal;
	border-width: 1px;
	border-style: solid;
	border-color: #B4B2B4 #444444 #444444 #B4B2B4;
	         
}

form {
	padding: 0px; 
	margin: 0px;
}	

img {
	border: 0px;
}

.StClr {
	font-weight: bold;
	color: green;
}

.AnClr {
	font-weight: bold;
	color: red;
}

.ModOpt {
	margin-top: 2px;
	font-size: 11px;
	text-align: right;
}

.TopBy {
	margin-top: 3px;
	margin-bottom: 0px;
	margin-left: 25px;
}

.MsgR1 {
	background: #DDEEFF;
}

.MsgR2 {
	background: #E8E8E8;
}

.MsgR3 {
	background: #dddddd;
}

.mnavMsg {
	border-bottom: 1px solid black;
	width : 100%;
}

.mnavWarnTbl {
	border: 1px dashed red;
}

.manvNoRes {
	border: 1px dashed blue;
}

font.lg {
	font-size: 12px;
}

td.tt {
	text-align: left;
	width: 100%;
	border-bottom: 1px solid white;
}

table.tt {
	width: 100%;
	padding: 1px;
	margin: 0px;
	text-align: center;
	border: 1px solid black;
}

a.big:link, a.big:active, a.big:visited {
	font-size: 13px;
}
