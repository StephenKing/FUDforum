{SECTION: thread_row}
<tr>
<td class="RowStyleB">{TEMPLATE-DATA: thread_read_status}</td>
<td class="RowStyleB">{IF: $cur->icon}{TEMPLATE: thread_icon}{ELSE}{TEMPLATE: thread_icon_none}{END}</td>
<td class="tt" style="padding-left: {FUNC: (20 * ($lev - 1))}px">{IF: $cur->poll_id}{TEMPLATE: thread_poll_indicator}{ENDIF}{IF: $cur->attach_cnt}{TEMPLATE: thread_attach_indicator}{ENDIF}<a href="{TEMPLATE: thread_row_lnk}" class="big">{VAR: cur->subject}</a>
{IF: ($lev == 1 && $cur->thread_opt > 1)}{IF: $cur->thread_opt & 4}{TEMPLATE: sticky}{ELSE}{TEMPLATE: announcement}{END}{ENDIF}
<div class="TopBy">{MSG: by} {IF: $cur->poster_id}{TEMPLATE: reg_user_link}{ELSE}{TEMPLATE: unreg_user_link}{END} {MSG: thread_on} {TEMPLATE: threadt_msg_post_date}</div></td>
</tr>
{SECTION: END}

{SECTION: thread_row_moved a row indicating that the thread has been moved}
<tr>
<td class="RowStyleB">&nbsp;</td>
<td class="RowStyleB"><img src="{THEME_IMAGE_ROOT}/moved.png" title="{MSG: moved_thread_message}" /></td>
<td class="tt">{MSG: was_moved_msg}</td>
</tr>
{SECTION: END}

{SECTION: max_depth_reached_lnk}
{ROOT}?t={DEF: d_thread_view}&amp;goto={VAR: cur->id}&amp;{DEF: _rsid}#msg_{VAR: cur->id}
{SECTION: END}

