#!/bin/sh
perl -p -i -e 's/href="([^{][^R]|[^j][^a])(.+?)\.php"/href="{ROOT}?t=\1\2"/gi' $1

perl -p -i -e 's/href="([^{][^R]|[^j][^a])(.+?)\.php\?(.+?)"/href="{ROOT}?t=\1\2&\3"/gi' $1

perl -p -i -e 's/{ROOT}\?t=javascript:\/\/"/javascript:\/\/"/gi' $1

perl -p -i -e 's/{GVAR: WWW_ROOT}emailconf.php\?/{ROOT}t=emailconf&/' $1

perl -p -i -e 's/{GVAR: WWW_ROOT}index.php\?/{ROOT}?t=index&/g' $1

perl -p -i -e 's/{GVAR: WWW_ROOT}index.php/{ROOT}?t=index/g' $1


perl -p -i -e 's/{GVAR: WWW_ROOT}\/register.php/{ROOT}?t=register/g' $1
perl -p -i -e 's/{GVAR: WWW_ROOT}register.php/{ROOT}?t=register/g' $1

perl -p -i -e 's/login.php\?{DEF: _rsid}/{ROOT}?t=login&{DEF: _rsid}/' $1

perl -p -i -e 's/{GVAR: WWW_ROOT}login.php\?/{ROOT}?t=login&/g' $1

perl -p -i -e 's/{GVAR: WWW_ROOT}login.php/{ROOT}?t=login/g' $1

perl -p -i -e 's/{GVAR: WWW_ROOT}{GVAR: DEFAULT_THREAD_VIEW}.php\?/{ROOT}?t={GVAR: DEFAULT_THREAD_VIEW}&/' $1

perl -p -i -e "s/javascript: window_open\(.(.+?)&/javascript: window_open('{ROOT}?t=\1&/" $1
